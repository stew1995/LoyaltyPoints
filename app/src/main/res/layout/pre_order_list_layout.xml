<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp"
    android:layout_marginBottom="-5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvOrderLocation"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="item1"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemName1"
                android:layout_below="@+id/tvOrderLocation"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="item2"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemName2"
                android:layout_below="@+id/tvItemName1"


                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="item3"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemName3"
                android:layout_below="@+id/tvItemName2"


                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="itemQuanity1"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemQty1"
                android:layout_alignBaseline="@+id/tvItemName1"
                android:layout_alignBottom="@+id/tvItemName1"

                android:layout_alignParentEnd="true"
                />

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="item4"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemName4"
                android:layout_marginTop="38dp"
                android:layout_below="@+id/tvItemName2"


                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="itemQuanity4"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemQty4"
                android:layout_alignBaseline="@+id/tvItemName4"
                android:layout_alignBottom="@+id/tvItemName4"


                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="itemQuanity2"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemQty2"
                android:layout_below="@+id/tvItemQty1"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:text="itemQuanity3"
                android:padding="15dp"
                android:textSize="16sp"
                android:id="@+id/tvItemQty3"
                android:layout_alignBaseline="@+id/tvItemName3"
                android:layout_alignBottom="@+id/tvItemName3"
                android:layout_alignParentEnd="true"/>

            <Button
                android:text="REMOVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemoveItem4"
                android:background="@null"
                android:layout_below="@+id/btnRemoveItem3"
                android:layout_alignParentEnd="true"/>

            <Button
                android:text="REMOVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemoveItem1"
                android:background="@null"
                android:layout_alignBaseline="@+id/tvItemQty1"
                android:layout_alignBottom="@+id/tvItemQty1"
                android:layout_alignParentEnd="true"/>

            <Button
                android:text="REMOVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemoveItem3"
                android:background="@null"
                android:layout_alignBaseline="@+id/tvItemQty3"
                android:layout_alignBottom="@+id/tvItemQty3"
                android:layout_alignStart="@+id/btnRemoveItem4"
                android:layout_marginStart="6dp" />

            <Button
                android:text="REMOVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnRemoveItem2"
                android:background="@null"
                android:layout_below="@+id/tvItemQty1"
                android:layout_alignStart="@+id/btnRemoveItem3"
                android:layout_marginTop="9dp" />


        </RelativeLayout>
        <TextView

            android:text="Cost in Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPrice"
            android:layout_marginRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:layout_alignBottom="@+id/btnRemoveItem4"
            android:layout_toStartOf="@+id/btnRemoveItem4"
            android:layout_marginEnd="7dp"
            android:textSize="20sp"
            android:textAlignment="center"/>

        <TextView
            android:text="Cost in Points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemPoints"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/tvItemName4"
            android:textAlignment="center"/>


    </LinearLayout>


</android.support.v7.widget.CardView>