<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/transactionDate"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price"
            android:gravity="right"
            android:textColor="@color/white"
            android:id="@+id/transactionPrice"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points"
            android:textColor="@color/white"
            android:id="@+id/transactionPoints"
            android:layout_alignParentBottom="true"
            android:textSize="18sp"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transaction_location_title"
            android:id="@+id/transactionLocation"
            android:textSize="20sp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_toStartOf="@+id/transactionDate"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/relativeLayout"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems1"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 1"
                android:id="@+id/transactionItemsQty1"
                android:textSize="18sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems2"
                android:layout_below="@+id/transactionItems1"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems3"
                android:layout_below="@+id/transactionItems2"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 3"
                android:id="@+id/transactionItemsQty3"
                android:layout_below="@+id/transactionItemsQty2"
                android:textSize="18sp"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems4"
                android:layout_below="@+id/transactionItems3"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 4"
                android:id="@+id/transactionItemsQty4"
                android:layout_below="@+id/transactionItemsQty3"
                android:textSize="18sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 2"
                android:id="@+id/transactionItemsQty2"
                android:textSize="18sp"
                android:gravity="right"
                android:layout_alignBaseline="@+id/transactionItems2"
                android:layout_alignBottom="@+id/transactionItems2"
                android:layout_alignParentStart="true"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>