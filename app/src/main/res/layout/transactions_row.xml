<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/transactionDate"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/transaction_location_title"
            android:id="@+id/transactionLocation"
            android:textSize="20sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/transactionPrice"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems1"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 1"
                android:id="@+id/transactionItemsQty1"
                android:textSize="16sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems2"
                android:layout_below="@+id/transactionItems1"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 2"
                android:id="@+id/transactionItemsQty2"
                android:layout_below="@+id/transactionItemsQty1"
                android:textSize="16sp"
                android:gravity="right"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems3"
                android:layout_below="@+id/transactionItems2"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 3"
                android:id="@+id/transactionItemsQty3"
                android:layout_below="@+id/transactionItemsQty2"
                android:textSize="16sp"
                android:gravity="right"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items"
                android:id="@+id/transactionItems4"
                android:layout_below="@+id/transactionItems3"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qty 4"
                android:id="@+id/transactionItemsQty4"
                android:layout_below="@+id/transactionItemsQty3"
                android:textSize="16sp"
                android:gravity="right"/>

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>