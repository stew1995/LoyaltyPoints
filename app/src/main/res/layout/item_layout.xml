<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemName"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemPoints"
        android:textSize="20sp"
        android:layout_below="@+id/tvItemPrice"
        android:layout_alignStart="@+id/tvItemPrice"
        android:layout_marginTop="9dp" />

    <TextView
        android:text="tvItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemPrice"
        android:textSize="20sp"
        android:layout_marginEnd="24dp"
        android:layout_alignBaseline="@+id/tvItemName"
        android:layout_alignBottom="@+id/tvItemName"
        android:layout_alignParentEnd="true" />
</RelativeLayout>